{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
      "appearanceTools": true,
      "color": {
        "palette": [
          { "slug": "moofar-green", "name": "Moofar Green", "color": "#2f8a3e" },
          { "slug": "dark", "name": "Dark", "color": "#222222" },
          { "slug": "muted", "name": "Muted", "color": "#666666" },
          { "slug": "white", "name": "White", "color": "#ffffff" }
        ]
      },
      "typography": {
        "fontSizes": [
          { "slug": "small", "size": "14px" },
          { "slug": "normal", "size": "16px" },
          { "slug": "large", "size": "32px" },
          { "slug": "xlarge", "size": "40px" }
        ],
        "dropCap": true
      },
      "spacing": {
        "units": ["px","em","rem","%"]
      }
    },
    "styles": {
      "color": {
        "background": "#ffffff",
        "text": "#222222"
      },
      "typography": {
        "fontFamily": "system-ui, -apple-system, 'Segoe UI', Roboto, Arial, sans-serif"
      },
      "elements": {
        "link": {
          "color": { "text": "var(--wp--preset--color--moofar-green)" }
        }
      }
    },
    "templateParts": [
      { "slug": "header", "area": "header", "file": "parts/header.html" },
      { "slug": "footer", "area": "footer", "file": "parts/footer.html" }
    ],
    "templates": {
      "home": { "title": "Home", "file": "templates/home.html" },
      "index": { "title": "Index", "file": "templates/index.html" },
      "page": { "title": "Page", "file": "templates/page.html" },
      "single": { "title": "Single", "file": "templates/single.html" },
      "archive": { "title": "Archive", "file": "templates/archive.html" },
      "search": { "title": "Search", "file": "templates/search.html" },
      "404": { "title": "404", "file": "templates/404.html" }
    }
  }
  